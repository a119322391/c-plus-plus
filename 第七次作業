private: System::Void histogramToolStripMenuItem_Click(System::Object^  sender, System::EventArgs^  e) {
			 int histogram[256];

			 int number;

			 int max = 0;

			 for (int i = 0; i <256; ++i)
			 {
				 histogram[i] = 0;
			 }

			 Bitmap^ myBitmap = gcnew Bitmap(pictureBox1->ImageLocation);

			 int W = myBitmap->Width;
			 int H = myBitmap->Height;

			 Bitmap^ myBitmap2 = gcnew Bitmap(256, 256, myBitmap->PixelFormat);
			 pictureBox3->Image = myBitmap2;

			 Graphics^ g = Graphics::FromImage(pictureBox3->Image);

			 Brush^ bshWt = gcnew SolidBrush(Color::White);
			 g->FillRectangle(bshWt, 0, 0, 256, 256);

			 for (int i = 0; i < W; i++){

				 for (int j = 0; j < H; j++){

					 switch (comboBox1->SelectedIndex){

					 case 0:

						 number = myBitmap->GetPixel(i, j).R;

						 break;

					 case 1:

						 number = myBitmap->GetPixel(i, j).G;

						 break;

					 case 2:

						 number = myBitmap->GetPixel(i, j).B;
						 break;
					 case 3:
						 number = (myBitmap->GetPixel(i, j).B + myBitmap->GetPixel(i, j).G+ myBitmap->GetPixel(i, j).R)/3;
						 break;
					 default:

						 number = myBitmap->GetPixel(i, j).R;

					 }

					 histogram[number]++;

				 }

			 }

			 for (int i = 0; i < 256; i++){

				 if (histogram[i]>max){

					 max = histogram[i];

				 }


			 }

			 Pen^ pnDraw = gcnew Pen(Color::Black, 1);

			 g->DrawLine(pnDraw, 0, 0, 0, 255);

			 g->DrawLine(pnDraw, 0, 255, 255, 255);

			 pnDraw->Color = Color::Red;

			 if (max <= 255){
				 if (comboBox1->SelectedIndex == 3){
					 pnDraw->Color = Color::Black;
					 g->DrawLine(pnDraw, hScrollBar1->Value, 0, hScrollBar1->Value, 255);
					 pnDraw->Color = Color::LightGray;
					 
				 }
				 for (int i = 0; i < 256; i++)

					 g->DrawLine(pnDraw, i, 255, i, i - histogram[i]);
				 if (comboBox1->SelectedIndex == 3){
					 pnDraw->Color = Color::Black;
					 g->DrawLine(pnDraw, hScrollBar1->Value, 0, hScrollBar1->Value, 255);
				 }

			 }

			 else{
				 if (comboBox1->SelectedIndex == 3){
					 pnDraw->Color = Color::Black;
					 g->DrawLine(pnDraw, hScrollBar1->Value, 0, hScrollBar1->Value, 255);
					 pnDraw->Color = Color::LightGray;
					
				 }
				 for (int i = 0; i < 256; i++)

					 g->DrawLine(pnDraw, i, 255, i, 255 - 255.0*(double)histogram[i] / max);
				 if (comboBox1->SelectedIndex == 3){
					 pnDraw->Color = Color::Black;
					 g->DrawLine(pnDraw, hScrollBar1->Value, 0, hScrollBar1->Value, 255);

				 }

			 }





}
private: System::Void comboBox1_SelectedIndexChanged(System::Object^  sender, System::EventArgs^  e) {

			 histogramToolStripMenuItem_Click( sender, e);

}
private: System::Void binarizationToolStripMenuItem_Click(System::Object^  sender, System::EventArgs^  e) {

			 Bitmap^ myBitmap = gcnew Bitmap(pictureBox1->ImageLocation);
			 int W = myBitmap->Width;
			 int H = myBitmap->Height;
			 for (int i = 0; i<W; i++) {
				 for (int j = 0; j<H; j++) {
					 int r = myBitmap->GetPixel(i, j).R;
					 int g = myBitmap->GetPixel(i, j).G;
					 int b = myBitmap->GetPixel(i, j).B;
					 int x = (r + g + b) / 3;
					 int y = hScrollBar1->Value;
					 if (x>y){
					 myBitmap->SetPixel(i, j, Color::FromArgb(255, 255, 255)); //Inverse Image
					 }
					 else{
						 myBitmap->SetPixel(i, j, Color::FromArgb(0, 0, 0)); //Inverse Image
					 }

				 }//for j
			 }//for i
			 pictureBox2->Image = myBitmap;
			 histogramToolStripMenuItem_Click(sender, e);

}
private: System::Void toolStripButton6_Click(System::Object^  sender, System::EventArgs^  e) {
			 binarizationToolStripMenuItem_Click(sender, e);
}
};
}
